@{
    ViewBag.Title = "NewUser";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
@model proiect.Models.User.ModelNewUser

<div class="formbold-main-wrapper">
     <div class="formbold-form-wrapper">
          @using (Html.BeginForm("NewUser", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
          @Html.AntiForgeryToken()
          <div class="formbold-input-flex">
               <div class="formbold-input-wrapp formbold-mb-3">
                    <label for="firstName" class="formbold-form-label">First Name</label>
                    <div>
                         @Html.TextBoxFor(model => model.FirstName, new { @class = "formbold-form-input", placeholder = "First Name", maxlength = "30" })
                         @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                    </div>
               </div>

               <div class="formbold-input-wrapp formbold-mb-3">
                    <label for="lastName" class="formbold-form-label">Last Name</label>
                    <div>
                         @Html.TextBoxFor(model => model.LastName, new { @class = "formbold-form-input", placeholder = "Last Name", maxlength = "30" })
                         @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                    </div>
               </div>
          </div>

          <div class="formbold-input-flex">
               <div class="formbold-mb-3">
                    <label for="email" class="formbold-form-label">Email</label>
                    @Html.TextBoxFor(model => model.Email, new { @class = "formbold-form-input", placeholder = "Email" })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
               </div>
               <div class="formbold-mb-3">
                    <label for="level" class="formbold-form-label">Level</label>
                    @Html.DropDownListFor(model => model.Level, new SelectList(new List<string> { "User", "Doctor", "Admin" }), new { @class = "formbold-form-input" })
                    @Html.ValidationMessageFor(model => model.Level, "", new { @class = "text-danger" })
               </div>

          </div>

          <div class="formbold-input-flex">
               <div class="formbold-mb-3">
                    <label for="address" class="formbold-form-label">Address</label>
                    @Html.TextBoxFor(model => model.Address, new { @class = "formbold-form-input", placeholder = "Address" })
                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
               </div>
               <div class="formbold-mb-3">
                    <label for="phone" class="formbold-form-label">Phone</label>
                    @Html.TextBoxFor(model => model.Phone, new { @class = "formbold-form-input", placeholder = "Phone" })
                    @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
               </div>


          </div>

          <div class="formbold-input-flex">
               <div class="formbold-mb-3">
                    <label for="password" class="formbold-form-label">Password</label>
                    @Html.PasswordFor(model => model.Password, new { @class = "formbold-form-input", placeholder = "Password", maxlength = "40" })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
               </div>

               <div class="formbold-mb-3">
                    <label for="confirmPassword" class="formbold-form-label">Confirm Password</label>
                    @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "formbold-form-input", placeholder = "Confirm Password", maxlength = "40" })
                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
               </div>


          </div>

          <button type="submit" class="formbold-btn">Adauga utilizator</button>

        }
          @if(ViewData["ConfirmationMessage"] == "Utilizatorul a fost creat cu succes")
          {
          <div class="alert alert-success">
               @ViewData["ConfirmationMessage"]
          </div>
          }
          else
          {
          <div class="alert alert-isuccess">
               @ViewData["ConfirmationMessage"]
          </div>
          }
     </div>
</div>

<style>
     body {
          font-family: 'Inter', sans-serif;
     }

     .formbold-mb-3 {
          margin-bottom: 15px;
     }

     .formbold-main-wrapper {
          display: flex;
          align-items: center;
          justify-content: center;
          padding: 48px;
     }

     .formbold-form-wrapper {
          margin: 0 auto;
          max-width: 570px;
          width: 100%;
          background: white;
          padding: 40px;
     }

     .formbold-input-flex {
          display: flex;
          gap: 20px;
          margin-bottom: 15px;
     }

     .formbold-input-wrapp {
          flex: 1;
     }

     .formbold-form-input {
          width: 100%;
          padding: 13px 22px;
          border-radius: 5px;
          border: 1px solid #dde3ec;
          background: #ffffff;
          font-weight: 500;
          font-size: 16px;
          color: #536387;
          outline: none;
          resize: none;
     }

          .formbold-form-input::placeholder {
               color: rgba(83, 99, 135, 0.5);
          }

          .formbold-form-input:focus {
               border-color: #6a64f1;
               box-shadow: 0px 3px 8px rgba(0, 0, 0, 0.05);
          }

     .formbold-form-label {
          color: #536387;
          font-size: 14px;
          line-height: 24px;
          display: block;
          margin-bottom: 10px;
     }

     .formbold-btn {
          font-size: 16px;
          border-radius: 5px;
          padding: 14px 25px;
          border: none;
          font-weight: 500;
          background-color: #6a64f1;
          color: white;
          cursor: pointer;
          margin-top: 25px;
          width: 100%;
     }

          .formbold-btn:hover {
               box-shadow: 0px 3px 8px rgba(0, 0, 0, 0.05);
          }
</style>
