@{
    ViewBag.Title = "ResetOassword";
    Layout = "~/Views/Shared/_LayoutSign.cshtml";
}
@model proiect.Models.Password.ModelResetPassword
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Design by foolishdeveloper.com -->
    <title>Autentificare</title>

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap" rel="stylesheet">
    <!--Stylesheet-->
    <style media="screen">
        *,
        *:before,
        *:after {
            padding: 0;
            margin: 0;
            box-sizing: border-box;
        }

        body {
            background-color: #FEFEFA;
        }

        .background {
            width: 430px;
            height: 520px;
            position: absolute;
            transform: translate(-50%,-50%);
            left: 50%;
            top: 50%;
        }

            .background .shape {
                height: 200px;
                width: 200px;
                position: absolute;
                border-radius: 50%;
            }

        .shape:first-child {
            background: linear-gradient( #c23030, #f62323 );
            left: -80px;
            top: -80px;
        }

        .shape:last-child {
            background: linear-gradient( to right, #d77e6d, #A32C00 );
            right: -30px;
            bottom: -80px;
        }

        form {
            height: 560px;
            width: 400px;
            background-color: rgba(255,255,255,0.13);
            position: absolute;
            transform: translate(-50%,-50%);
            top: 50%;
            left: 50%;
            border-radius: 10px;
            backdrop-filter: blur(10px);
            border: 2px solid rgba(255,255,255,0.1);
            box-shadow: 0 0 40px rgba(8,7,16,0.6);
            padding: 50px 35px;
        }

            form * {
                font-family: 'Poppins',sans-serif;
                color: #342c29;
                letter-spacing: 0.5px;
                outline: none;
                border: none;
            }

            form h3 {
                font-size: 32px;
                font-weight: 500;
                line-height: 42px;
                text-align: center;
            }

        label {
            display: block;
            margin-top: 20px;
            font-size: 16px;
            font-weight: 500;
        }

        input {
            display: block;
            height: 50px;
            width: 100%;
            background-color: rgba(153, 129, 129, 0.27);
            border-radius: 3px;
            padding: 0 10px;
            margin-top: 8px;
            font-size: 14px;
            font-weight: 300;
        }

        ::placeholder {
            color: #202020;
        }

        button {
            margin-top: 30px;
            width: 100%;
            background-color: #ffffff;
            color: #080710;
            padding: 15px 0;
            font-size: 18px;
            font-weight: 600;
            border-radius: 25px;
            cursor: pointer;
        }

        .social {
            margin-top: 30px;
            display: flex;
        }

            .social div {
                background: red;
                width: 150px;
                border-radius: 3px;
                padding: 5px 10px 10px 5px;
                background-color: rgba(124, 70, 70, 0.27);
                color: #1f2229;
                text-align: center;
            }

                .social div:hover {
                    background-color: rgba(36, 35, 45, 0.47);
                }

            .social .fb {
                margin-left: 25px;
            }

            .social i {
                margin-right: 4px;
            }

        .log-in {
            display: flex;
            justify-content: center;
        }

        .sign-in {
            display: flex;
            justify-content: flex-end;
        }

            .sign-in a:hover {
                color: #f2f4fb;
            }

        .button {
            display: inline-block;
            padding: 10px 20px;
            text-decoration: none;
            color: rgb(29, 28, 28);
            background-color: rgba(124, 70, 70, 0.27);
            border-radius: 25px;
            border: none;
            cursor: pointer;
        }

            .button:hover {
                background-color: rgba(215, 86, 86, 0.5);
            }
    </style>
</head>
<body>
    <div class="background">
        <div class="shape"></div>
        <div class="shape"></div>
    </div>

    <form method="post">
        @Html.AntiForgeryToken()
        <h3>Enter Verification Code</h3>

        <label for="CodeWrite">Enter the verification code:</label>
        @Html.TextBoxFor(model => model.CodeWrite, new { @class = "form-control", placeholder = "Enter the code received", maxlength = "8" })
        @Html.ValidationMessageFor(model => model.CodeWrite, "", new { @class = "text-danger" })

        <button type="submit" class="button">Verify Code</button>
    </form>
</body>
</html>