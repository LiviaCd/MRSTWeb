@using proiect.Domain.Enums
<div class="page-sidebar pagescroll">

     <!-- MAIN MENU - START -->
     <div class="page-sidebar-wrapper" id="main-menu-wrapper">

          <!-- USER INFO - START -->
          <div class="profile-info row">

               <div class="profile-image col-4">
                    <a href="ui-profile.html">
                         <img src="@Url.Content(HttpContext.Current.Session["Photo"] as string)" alt="Admin" class="img-fluid rounded" style="width: 150px; height: auto;">
                    </a>
               </div>

               <div class="profile-details col-8">

                    <h3>
                         <a href="ui-profile.html">@HttpContext.Current.Session["FirstName"] @HttpContext.Current.Session["LastName"]</a>

                         <!-- Available statuses: online, idle, busy, away and offline -->
                         <span class="profile-status online"></span>
                    </h3>

                    <p class="profile-title">@HttpContext.Current.Session["Role"]</p>

               </div>

          </div>
          <!-- USER INFO - END -->



          <ul class='wraplist'>

               <li class='menusection'>Main</li>
               <li class="">
                    <a href="@Url.Action("SearchUser", "ChatMessage")">
                         <i class="fa fa-dashboard"></i>
                         <span class="title">Vezi utilizatori</span>
                    </a>
               </li>
               <li class="">
                    <a href="@Url.Action("ProfilePage", "Profile")">
                         <i class="fa fa-suitcase"></i>
                         <span class="title">Profilul meu</span>
                    </a>

               <li class="">
                    <a href="@Url.Action("LocationsPage", "LoginUser")">
                         <i class="fa fa-columns"></i>
                         <span class="title">Locații</span>
                    </a>

                    @if (User.Identity.IsAuthenticated)
              {
                  var role = (proiect.Domain.Enums.URole)HttpContext.Current.Session["Role"];

                  if (role.ToString() == "Admin")
                  {
               <li class="">
                    <a href="@Url.Action("SearchDonator", "Clinic")">
                         <i class="fa fa-dashboard"></i>
                         <span class="title">Căutare donatori</span>
                    </a>
               </li>
               <li class="">
                    <a href="@Url.Action("AllResources", "Clinic")">
                         <i class="fa fa-dashboard"></i>
                         <span class="title">Resurse de sânge</span>
                    </a>
               </li>

               <li class="">
                    <a href="@Url.Action("TestUsers", "Admin")">
                         <i class="fa fa-dashboard"></i>
                         <span class="title">Utilizatori</span>
                    </a>
               </li>
                  }
                  else if (role.ToString() == "Doctor")
                  {
               <li class="">
                    <a href="@Url.Action("SearchDonator", "Clinic")">
                         <i class="fa fa-dashboard"></i>
                         <span class="title">Căutare donatori</span>
                    </a>
               </li>
               <li class="">
                    <a href="@Url.Action("AllResources", "Clinic")">
                         <i class="fa fa-dashboard"></i>
                         <span class="title">Resurse de sânge</span>
                    </a>
               </li>
                  }
              }


                    <li class="">
                         <a href="@Url.Action("ChatPage", "ChatMessage")">
                              <i class="fa fa-comments"></i>
                              <span class="title">Chat </span>
                              <span class="arrow "></span>
                         </a>
                    </li>
                    <li class="">
                         <a href="@Url.Action("AnchetaPage", "Ancheta")">
                              <i class="fa fa-bullseye"></i>
                              <span class="title">Anchetă</span>
                              <span class="arrow "></span>
                         </a>
                        
                    </li>
                    <li class="">
                         <a href="@Url.Action("Appointment", "Appointment")">
                              <i class="fa fa-dashboard"></i>
                              <span class="title">Programările mele</span>
                         </a>
                    </li>

                    
               </ul>
     </div>
</div>