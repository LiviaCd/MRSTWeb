
@{
    ViewBag.Title = "AddNews";
}

<!DOCTYPE html>
<html lang="ro">
<head>
     <meta charset="UTF-8">
     <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <title>Adaugă Noutăți</title>
     <style>
          body {
               font-family: Arial, sans-serif;
               margin: 20px;
          }

          form {
               max-width: 600px;
               margin: 0 auto;
               padding: 20px;
               border: 1px solid #ccc;
               border-radius: 10px;
               background-color: #f9f9f9;
          }

          label {
               display: block;
               margin-bottom: 8px;
               font-weight: bold;
          }

          input[type="text"], textarea, input[type="file"], input[type="datetime-local"] {
               width: 100%;
               padding: 10px;
               margin-bottom: 15px;
               border: 1px solid #ccc;
               border-radius: 5px;
          }

          button {
               padding: 10px 20px;
               background-color: #28a745;
               color: #fff;
               border: none;
               border-radius: 5px;
               cursor: pointer;
          }

               button:hover {
                    background-color: #218838;
               }
     </style>
</head>
<body>
     <h1>Adaugă Noutăți</h1>
     <form>
          <label for="title">Titlu:</label>
          <input type="text" id="title" name="title" required>

          <label for="body">Conținut:</label>
          <textarea id="body" name="body" rows="5" required></textarea>

          <label for="photoPath">Cale Fotografie:</label>
          <input type="file" id="photoPath" name="photoPath" accept="image/*" required>

          <label for="created">Data Creării:</label>
          <input type="datetime-local" id="created" name="created" required>

          <button type="submit">Adaugă Noutatea</button>
     </form>
</body>
</html>


