@{
    ViewBag.Title = "Add Photo";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
@model proiect.Models.Profile.MProfile
<div class="container">
     <h2>Upload Profile Photo</h2>
     <form method="post" enctype="multipart/form-data">
          @using (Html.BeginForm("AddPhoto", "LoginUser", FormMethod.Post, new { enctype = "multipart/form-data" }))
          {
          @Html.AntiForgeryToken()

          <div class="form-group">
               @Html.LabelFor(model => model.PhotoFile)
               @Html.TextBoxFor(model => model.PhotoFile, new { type = "file", @class = "form-control", required = "required" })
               @Html.ValidationMessageFor(model => model.PhotoFile, "", new { @class = "text-danger" })
          </div>

          <div class="col-sm-12">
               <button type="submit" class="btn btn-primary">Save Photo</button>
          </div>
          }
     </form>
</div>

