
@{
    ViewBag.Title = "DeleteAppointment";
Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
@model proiect.Domain.Entities.Appointment.UAppointment
<div class="formbold-main-wrapper">
     <!-- Author: FormBold Team -->
     <!-- Learn More: https://formbold.com -->
     <div class="formbold-form-wrapper">
          <form method="POST">

               @Html.AntiForgeryToken()



               <div class="formbold-mb-5">
                    <label for="FirstName" class="formbold-form-label">Nume</label>
                    @Html.TextBoxFor(model => model.FirstName)
               </div>

               <div class="formbold-mb-5">
                    <label for="last name" class="formbold-form-label">Prenume</label>
                    @Html.TextBoxFor(model => model.LastName)
               </div>
               <div class="formbold-mb-5">
                    <label for="email" class="formbold-form-label"> Email </label>
                    @Html.TextBoxFor(model => model.Email)
               </div>
               <div class="formbold-mb-5">
                    <label for="phone" class="formbold-form-label"> Phone Number </label>
                    @Html.TextBoxFor(model => model.Phone)
               </div>
               <div class="formbold-mb-5">
                    <label for="blood type" class="formbold-form-label"> Grupa sangvina </label>
                    @Html.TextBoxFor(model => model.BloodType)
               </div>

               <div class="container-fluid px-1 px-sm-5 mx-auto">
                    <div class="row d-flex justify-content-sm-center px-2">
                         <div class="form-group row">
                              @Html.TextBoxFor(model => model.Date)
                         </div>

                    </div>
               </div>

               <div class="container-fluid px-1 px-sm-5 mx-auto">
                    <div class="row d-flex justify-content-sm-center px-2">
                         <div class="form-group row">
                              <label for="hour" class="formbold-form-label"> Selectati ora </label>
                              @Html.TextBoxFor(model => model.Time)
                         </div>
                    </div>
               </div>

               <div class="container-fluid px-1 px-sm-5 mx-auto">
                    <div class="row d-flex justify-content-sm-center px-2">
                         <div class="form-group row">
                              <label for="address" class="formbold-form-label"> Selectati centrul de donare </label>
                              @Html.TextBoxFor(model => model.Address)
                         </div>
                    </div>
               </div>

               <div>
                    <button class="formbold-btn">Șterge programarea</button>
               </div>
               }
               @if (ViewData["ConfirmationMessage"] != null)
     {
               <div class="alert alert-success">
                    @ViewData["ConfirmationMessage"]
               </div>
     }
          </form>
     </div>
</div>
<style>
     * {
          margin: 0;
          padding: 0;
          box-sizing: border-box;
     }

     body {
          font-family: "Inter", Arial, Helvetica, sans-serif;
     }

     .formbold-mb-5 {
          margin-bottom: 20px;
     }

     .formbold-pt-3 {
          padding-top: 12px;
     }

     .formbold-main-wrapper {
          display: flex;
          align-items: center;
          justify-content: center;
          padding: 48px;
     }

     .formbold-form-wrapper {
          margin: 0 auto;
          max-width: 550px;
          width: 100%;
          background: white;
     }

     .formbold-form-label {
          display: block;
          font-weight: 500;
          font-size: 16px;
          color: #07074d;
          margin-bottom: 12px;
     }

     .formbold-form-label-2 {
          font-weight: 600;
          font-size: 20px;
          margin-bottom: 20px;
     }

     .formbold-form-input {
          width: 100%;
          padding: 12px 24px;
